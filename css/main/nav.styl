@import '../mixin'

width = 940px
blue = #428cce
silver = #bdc3c7
nav_height = 92px

body
	min-width width
#nav.sticky
	box-shadow 0 1px 3px rgba(0, 0, 0, .12)
#nav
	height nav_height
	z-index 9999
	width 100%
	background #fff
	.htitle
		display none
	.container
		width width
		height 100%
		margin-right auto
		margin-left auto
		position relative
		#logo
			vertical-middle(80px)
			a
				display block
	#menu
		position absolute
		right 0px
		top 0px
		ul
			position relative
			clearfix()
		li
			display inline-block
			line-height nav_height
			z-index 14
			float left
			a
				display block
				color silver
				outline none
				letter-spacing 0
				overflow hidden
				font-size 18px
				margin 0 15px
				font_family_yahei()
				height (nav_height - 3)
		li:hover
			a
				color blue
		li.active
			a
				color blue
				border-bottom 3px solid blue
