@import '../mixin'

slider_height = 550px
blue = #428cce
silver = #f5f5f5

#banner_main
	max-height slider_height !important
	margin 0px auto

#banner_slider
	max-height slider_height !important

.banner_green
	font-size 30px
	color #FFFFFF
	line-height 30px
	z-index 3
	background-color blue
	padding 10px 20px 10px 20px

.banner_white
	font-size 30px
	line-height 30px
	color #393939
	z-index 3
	background-color silver
	padding 5px 20px 5px 20px

