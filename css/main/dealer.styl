@import '../mixin'

max_width = 940px
blue = #428cce
blue2 = #4eb1e6
base_bg = #f5f5f5

.page_title
	background blue
	color white
	.title
		font-size 2em
		padding 20px 0
		width max_width
		margin 0 auto
		position relative
h2 i,h4 i
	margin-right 10px
.wrapper
	margin-bottom 40px
#dealer
	.inner_container
		padding-top 40px
		.country_selector
			width 37%
			height 100%
			.desc
				padding 5px
				background blue
				color white
			.selector
				padding 15px 5px
				background base_bg
				vbg-gradient #fff,#eee
			select
				margin-top 5px
		.dealer_list
			width 60%
			height 100%
			ul.list
				margin 0
				padding 0
				li
					line-height 2em
					background base_bg
					vbg-gradient #fff,#eee
					margin-bottom 10px
					padding 20px
					border-radius 7px
					.info
						i
							margin-right 10px
							color blue
						a:hover
							text-decoration underline

					h3
						font-size 2em
					.action
						margin-top 20px
						.btn
							font-size 1.5em
							i
								margin-left 10px
			a
				color blue
#quote
	.form
		padding 20px
		color #333
		position relative
		border 1px solid #ddd
		border-radius 5px
		.country_selector
			position relative
		.label
			font-weight bold
			position absolute
			top 0
			left 0
		.input-group
			padding-left 100px
		.product
			position relative
			.input-group
				clearfix()
				.item
					float left
					width 200px
					input
						margin-right 5px
	.desc
		margin 10px 0
		padding 10px 0
		font-size 1.2em
		p
			line-height 2em
			margin 20px 0
			border-left 3px solid blue
			padding-left 10px
#product
	.zen_container
		width max_width
	.catelog
		display block
		padding 20px 0
#feature
	.zen_container
		width max_width
		clearfix()
	.col-md-3
		float left
		width 28%
		position relative
		min-height 1px
		padding 0 15px
	.col-md-9
		float left
		width 65%
		position relative
		min-height 1px
		padding 0 15px
	.image
		margin 20px 0
		width max_width
		overflow hidden
		img
			height 380px
	.section
		margin 30px 0
		h2
			color white
			padding 10px
			background blue
		.content
			h3
				padding-left 10px
				margin 10px 0
				border-left 3px solid blue
				color blue
			p
				text-indent 20px
				line-height 1.5em
				margin 10px 0
