@import '../mixin'

max_width = 940px
blue = #428cce
blue2 = #4eb1e6
base_bg = #f5f5f5

.page_title
	background blue
	color white
	.title
		font-size 2em
		padding 20px 0
		width max_width
		margin 0 auto
h2 i,h4 i
	margin-right 10px
#dealer
	height 700px
	.inner_container
		padding-top 40px
		.country_selector
			width 37%
			height 100%
			.desc
				padding 5px
				background blue
				color white
			.selector
				padding 15px 5px
				background base_bg
				vbg-gradient #fff,#eee
			select
				margin-top 5px
		.dealer_list
			width 60%
			height 100%
			ul.list
				margin 0
				padding 0
				li
					line-height 2em
					background base_bg
					vbg-gradient #fff,#eee
					margin-bottom 10px
					padding 20px
					border-radius 7px
					.email,.tel,.website
						i
							margin-right 10px
							color blue
						a:hover
							text-decoration underline

					h3
						font-size 2em
					.action
						margin-top 20px
						.btn
							font-size 1.5em
							i
								margin-left 10px
			a
				color blue
#quote
	.form
		padding 20px
		background base_bg
		color #333
		position relative
		margin-bottom 100px
		.country_selector
			position relative
		.label
			font-weight bold
			position absolute
			top 0
			left 0
		.input-group
			padding-left 100px
		.product
			position relative
			.input-group
				clearfix()
				.item
					float left
					width 200px
					input
						margin-right 5px
	.desc
		margin-top 40px
		p
			line-height 2em
			margin 30px 0
